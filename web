  <script>
    // Subtle shaking for text
    const text = document.querySelector("h1");
    setInterval(() => {
      const x = (Math.random() * 2 - 1) * 1.5;
      const y = (Math.random() * 2 - 1) * 1.5;
      text.style.transform = `translate(${x}px, ${y}px)`;
    }, 100);
