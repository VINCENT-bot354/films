      animation-delay: 1.5s;
    }

    @keyframes beamPulse {
      0% { opacity: 0.3; transform: translate(-50%, -50%) scale(1.4); }
      100% { opacity: 0.8; transform: translate(-50%, -50%) scale(1.6); }
    }

    /* FLOOR CRACK EFFECT */
    .floor {
      position: absolute;
      bottom: 0;
      width: 100%;
